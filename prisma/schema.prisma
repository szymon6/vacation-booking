// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Worker {
  id           Int       @id @default(autoincrement())
  name         String
  surname      String
  vacationDays Int
  requests     Request[]
}

model Manager {
  id                Int       @id @default(autoincrement())
  name              String
  surname           String
  resolved_requests Request[]
}

model request_status {
  id       Int       @id @default(autoincrement())
  value    String    @unique
  requests Request[]
}

model Request {
  id                  Int            @id @default(autoincrement())
  request_created_at  DateTime       @default(now()) @db.Date
  request_updated_at  DateTime       @updatedAt @db.Date
  Author              Worker         @relation(fields: [author], references: [id])
  author              Int
  Status              request_status @relation(fields: [status], references: [id])
  status              Int
  Resolved_by         Manager        @relation(fields: [resolved_by], references: [id])
  resolved_by         Int
  vacation_start_date DateTime       @db.Date
  vacation_end_date   DateTime       @db.Date
}
